    <script>
        const toggleBtn = document.getElementById('theme-toggle');
        const root = document.documentElement;
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            root.classList.add('dark'); toggleBtn.textContent = '‚òÄÔ∏è'
        } else { root.classList.remove('dark'); toggleBtn.textContent = 'üåô' }
        toggleBtn.addEventListener('click', () => {
            if (root.classList.contains('dark')) { root.classList.remove('dark'); localStorage.theme = 'light'; toggleBtn.textContent = 'üåô' }
            else { root.classList.add('dark'); localStorage.theme = 'dark'; toggleBtn.textContent = '‚òÄÔ∏è' }

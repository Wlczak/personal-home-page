<!-- templates/index.tmpl -->
{{define "index"}}
<!DOCTYPE html>
<html lang="en" class="dark">
{{template "head" .}}

<body
    class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300 relative pb-16">
    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 right-4 z-10">
        <button id="theme-toggle" aria-label="Toggle Dark Mode"
            class="p-2 bg-gray-200 dark:bg-gray-700 rounded-full focus:outline-none transition-colors duration-300 cursor-pointer">ðŸŒ™</button>
